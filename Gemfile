source "http://rubygems.org"

# rails yo
gem "rails", "3.0.3"
# sqlite db
gem "sqlite3-ruby", :require => "sqlite3"
# coffeescript compiler
gem "barista", "~> 1.0"
# Use unicorn as the web server
gem "unicorn"
# debugger
gem "ruby-debug19"
# erb is stoopids
gem "haml"
# make working with haml sexier
gem "compass"

group :development, :test do
  # printing better
  gem "awesome_print"
  # pretty interface
  gem "web-app-theme"
  # no more erb
  gem "haml-rails"
  # add a bunch of cool generators
  gem "rails3-generators"
  # fixtures are stoopids
  gem "factory_girl"
end
