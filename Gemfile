source "http://rubygems.org"

# rails yo
gem "rails", "3.0.3"
# sqlite db
gem "sqlite3-ruby", :require => "sqlite3"
# coffeescript compiler
gem "barista", "~> 1.0"
# debugger
gem "ruby-debug19"
# erb is stoopids
gem "haml"
# make working with haml sexier
gem "compass"

group :development, :test do
  # pretty interface
  gem "web-app-theme"
  # no more erb
  gem "haml-rails"
  # add a bunch of cool generators
  gem "rails3-generators"
  # fixtures are stoopids
  gem "factory_girl"
  # common files gem
  gem 'cf_ruby_gems', '=0.1.7', :require => nil, :git => "git://github.com/expectedbehavior/cf_ruby_gems.git"
end
